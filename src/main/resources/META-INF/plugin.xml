<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.dmitry.aspclassic</id>
    <name>ASP Classic Language Support</name>
    <vendor>Dmitry</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.xml</depends>

    <description><![CDATA[
    <p>Basic file type support for Classic ASP (Active Server Pages) in JetBrains IDEs.</p>
    <p>Treats ASP file content as HTML for IDE processing (syntax highlighting, code completion, etc.).</p>
    
    <h3>Supported File Extensions:</h3>
    <ul>
        <li>.asp - Active Server Pages</li>
        <li>.asa - Global.asa files</li>
    </ul>
    ]]></description>

    <extensions defaultExtensionNs="com.intellij">
        <!-- Language and File Type - uses HTML parser internally -->
        <fileType name="ASP Classic"
                  implementationClass="com.dmitry.aspclassic.AspFileType"
                  language="ASP Classic"
                  fieldName="INSTANCE"
                  extensions="asp;asa;inc"/>

        <!-- Parser Definition -->
        <lang.parserDefinition language="ASP Classic"
                               implementationClass="com.dmitry.aspclassic.parser.AspParserDefinition"/>

        <!-- Syntax Highlighter -->
        <lang.syntaxHighlighterFactory implementationClass="com.dmitry.aspclassic.highlight.AspSyntaxHighlighterFactory"
                                language="ASP Classic"/>

        <!-- HTML Language Injector -->
        <multiHostInjector implementation="com.dmitry.aspclassic.injection.AspHtmlInjector"/>
    </extensions>
</idea-plugin>
